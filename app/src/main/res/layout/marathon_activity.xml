<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/marathonActBackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:orientation="horizontal"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <FrameLayout
            android:layout_width="250dp"
            android:layout_height="200dp"
            android:layout_marginLeft="25dp">

            <ImageView
                android:id="@+id/shoesListActLogo"
                android:layout_width="68dp"
                android:layout_height="67dp"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="50dp"
                android:layout_toStartOf="@+id/imageView4"
                app:srcCompat="@drawable/logo" />

            <ImageView
                android:id="@+id/marathonActMenu"
                android:layout_width="250dp"
                android:layout_height="140dp"
                android:visibility="gone"
                app:srcCompat="@drawable/logomenu" />

            <LinearLayout
                android:id="@+id/marathonActMenuText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="8dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/marathonActMenuHome"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="HOME"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:text="PROFILE"
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/marathonActMenuTimeline"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:text="TIMELINE"
                        android:textSize="10sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="8dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="RUNNING"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:text="MY COURSE"
                        android:textSize="10sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:text="MARATHON"
                        android:textColor="#000"
                        android:textSize="10sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:text="MOISTURE"
                        android:textSize="10sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="8dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView11"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="DESIGN"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/textView10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:text="SHOE RACK"
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/textView9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:text="CUSTOM"
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/textView8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:text="LED"
                        android:textSize="10sp" />
                </LinearLayout>

            </LinearLayout>

        </FrameLayout>

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/imageView4"
            android:layout_gravity="center"
            android:layout_marginBottom="40dp"
            android:layout_marginLeft="220dp"
            app:srcCompat="@drawable/marathonsearch" />

    </LinearLayout>

    <!--<ImageView-->
        <!--android:id="@+id/marathonActCircle"-->
        <!--android:layout_width="250dp"-->
        <!--android:layout_height="250dp"-->
        <!--android:layout_alignParentBottom="true"-->
        <!--android:layout_alignParentStart="true"-->
        <!--android:layout_marginBottom="47dp"-->
        <!--android:layout_marginStart="103dp"-->
        <!--android:src="@drawable/radius"-->
        <!--/>-->

    <FrameLayout
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="47dp"
        android:layout_marginStart="103dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/marathonActRadius"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_alignBottom="@+id/marathonActGPSone"
                android:layout_alignParentEnd="true"
                app:srcCompat="@drawable/radius" />

            <ImageView
                android:id="@+id/marathonActRadius2"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:visibility="invisible"
                app:srcCompat="@drawable/radius" />

            <ImageView
                android:id="@+id/marathonActRadius3"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_alignBottom="@+id/marathonActRadius"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="16dp"
                android:visibility="invisible"
                app:srcCompat="@drawable/radius" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_below="@+id/marathonActGPStwo"
                android:layout_marginStart="45dp"
                android:layout_marginTop="16dp"
                android:layout_toEndOf="@+id/marathonActGPSthree"
                app:srcCompat="@drawable/marathonme" />

            <ImageView
                android:id="@+id/marathonActGPSthree"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignStart="@+id/marathonActCircle"
                android:layout_alignTop="@+id/imageView3"
                android:layout_marginStart="13dp"
                android:layout_marginTop="8dp"
                android:visibility="invisible"
                app:srcCompat="@drawable/marathongps" />

            <ImageView
                android:id="@+id/marathonActGPStwo"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignStart="@+id/imageView3"
                android:layout_alignTop="@+id/marathonActCircle"
                android:layout_marginTop="42dp"
                android:visibility="invisible"
                app:srcCompat="@drawable/marathongps" />

            <ImageView
                android:id="@+id/marathonActGPSone"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_below="@+id/marathonActGPSthree"
                android:layout_marginTop="15dp"
                android:layout_toEndOf="@+id/marathonActGPStwo"
                app:srcCompat="@drawable/marathongps" />
        </RelativeLayout>

    </FrameLayout>

    <ImageView
        android:id="@+id/marathonActFriendOne"
        android:layout_width="140dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="false"
        android:layout_marginLeft="300dp"
        android:layout_marginTop="230dp"
        android:visibility="visible"
        app:srcCompat="@drawable/friendone" />

    <ImageView
        android:id="@+id/marathonActFriendTwo"
        android:layout_width="130dp"
        android:layout_height="100dp"
        android:layout_above="@+id/imageView3"
        android:layout_alignStart="@+id/imageView3"
        android:layout_marginStart="250dp"
        android:layout_marginTop="100dp"
        android:visibility="invisible"
        app:srcCompat="@drawable/friendtwo" />

    <ImageView
        android:id="@+id/marathonActFriendThree"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_above="@+id/marathonActCourseBtn"
        android:layout_alignParentStart="true"
        android:visibility="invisible"
        app:srcCompat="@drawable/friendthree" />

    <ImageView
        android:id="@+id/marathonActCourseBackground"
        android:layout_width="270dp"
        android:layout_height="230dp"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/marathonCourseTomHardy"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="460dp"
        android:src="@drawable/marathonbox" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/imageView22"
        android:layout_alignStart="@+id/marathonActCourseTomHardy"
        android:layout_marginLeft="18dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/marathonActLeft"
            android:layout_width="15dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="20dp"
            app:srcCompat="@drawable/marathonleft" />

        <ImageView
            android:id="@+id/marathonActChange"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/marathonActRight"
            android:layout_width="15dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="20dp"
            app:srcCompat="@drawable/marathonright" />

    </LinearLayout>

    <ImageView
        android:id="@+id/marathonActCourseBtn"
        android:layout_width="130dp"
        android:layout_height="50dp"
        app:srcCompat="@drawable/marathonselect"
        android:layout_marginBottom="12dp"
        android:layout_alignBottom="@+id/marathonActCourseBackground"
        android:layout_alignStart="@+id/linearLayout2"
        android:layout_marginStart="27dp" />

    <ImageView
        android:id="@+id/imageView22"
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/imageView23"
        android:layout_alignStart="@+id/imageView23"
        app:srcCompat="@drawable/plus" />

    <ImageView
        android:id="@+id/imageView23"
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/marathonActCourseBtn"
        android:layout_alignParentStart="true"
        android:layout_marginStart="19dp"
        app:srcCompat="@drawable/mainus" />

    <ImageView
        android:id="@+id/marathonActCourseTomHardy"
        android:layout_width="220dp"
        android:layout_height="100dp"
        android:layout_above="@+id/marathonActCourseBackground"
        android:layout_alignParentEnd="false"
        android:layout_marginLeft="480dp"
        android:src="@drawable/marathonprofile" />

</RelativeLayout>