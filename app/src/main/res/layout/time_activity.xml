<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/timeActGoodDesign"
        android:layout_width="200dp"
        android:layout_height="170dp"
        android:layout_alignBottom="@+id/timeActRunning"
        android:layout_marginBottom="18dp"
        android:layout_toEndOf="@+id/timeActRunning"
        />

    <ImageView
        android:id="@+id/timeActMyFace"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignTop="@+id/timeActBigLogo"
        android:layout_marginStart="42dp"
        android:layout_toEndOf="@+id/timeActRunningSecond"
        />

    <FrameLayout
        android:id="@+id/timeActFrameLayout"
        android:layout_width="200dp"
        android:layout_height="300dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true">

        <ImageView
            android:id="@+id/timeActNiceRunning"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_alignTop="@+id/timeActGoodDesign"
            android:layout_marginTop="100dp"
            android:layout_toEndOf="@+id/timeActGoodDesign"
            />

        <ImageView
            android:id="@+id/timeActFriendList"
            android:layout_width="180dp"
            android:layout_height="250dp"
            android:layout_gravity="right"
            android:layout_marginTop="25dp"
            android:visibility="gone"
            app:srcCompat="@drawable/justin"
            />

    </FrameLayout>

    <ImageView
        android:id="@+id/timeActRunningSecond"
        android:layout_width="120dp"
        android:layout_height="150dp"
        android:layout_alignBottom="@+id/timeActMyFace"
        android:layout_marginBottom="24dp"
        android:layout_marginStart="20dp"
        android:layout_toEndOf="@+id/timeActBigLogo"
        />

    <ImageView
        android:id="@+id/timeActRunning"
        android:layout_width="150dp"
        android:layout_height="180dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/timeActBigLogo"
        android:layout_marginBottom="19dp"
        android:layout_marginStart="117dp"
        />

    <ImageView
        android:id="@+id/timeActBigLogo"
        android:layout_width="200dp"
        android:layout_height="250dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="26dp"
        />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:orientation="horizontal"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <FrameLayout
            android:layout_width="250dp"
            android:layout_height="200dp"
            android:layout_marginLeft="25dp">

            <ImageView
                android:id="@+id/shoesListActLogo"
                android:layout_width="68dp"
                android:layout_height="67dp"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="41dp"
                android:layout_toStartOf="@+id/imageView4"
                app:srcCompat="@drawable/logo" />

            <ImageView
                android:id="@+id/timeActMenu"
                android:layout_width="250dp"
                android:layout_height="140dp"
                android:visibility="gone"
                app:srcCompat="@drawable/logomenu" />

            <LinearLayout
                android:id="@+id/timeActMenuText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="8dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/timeActMenuHome"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="HOME"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:text="PROFILE"
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/timeActMenuTimeline"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:text="TIMELINE"
                        android:textColor="#000"
                        android:textSize="10sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="8dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="RUNNING"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/timeActMenuMyCourse"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:text="MY COURSE"
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/timeActMenuMarathon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:text="MARATHON"
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:text="MOISTURE"
                        android:textSize="10sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="8dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView11"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="DESIGN"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/textView10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:text="SHOE RACK"
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/textView9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:text="CUSTOM"
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/textView8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:text="LED"
                        android:textSize="10sp" />
                </LinearLayout>

            </LinearLayout>

        </FrameLayout>

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="200dp"
            android:layout_height="25dp"
            android:layout_alignBottom="@+id/shoesListActLogo"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginBottom="40dp"
            android:layout_marginTop="5dp"
            android:paddingRight="40dp"
            app:srcCompat="@drawable/timeline" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/imageView4"
            android:layout_gravity="center"
            android:layout_marginBottom="40dp"
            android:layout_marginLeft="95dp"
            app:srcCompat="@drawable/search" />

    </LinearLayout>

    <ImageView
        android:id="@+id/timeActSideMenu"
        android:layout_width="20dp"
        android:layout_height="50dp"
        app:srcCompat="@drawable/asdf"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true" />

    <FrameLayout
        android:id="@+id/timeActHeart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout"
        android:layout_marginStart="39dp"
        android:layout_marginTop="124dp">

        <ImageView
            android:id="@+id/timeActHeartSecond"
            android:layout_width="11dp"
            android:layout_height="13dp"
            app:srcCompat="@drawable/redheart" />

        <ImageView
            android:id="@+id/timeActHeartFirst"
            android:layout_width="11dp"
            android:layout_height="13dp"
            app:srcCompat="@drawable/heart"
            />
    </FrameLayout>



    <!--<ImageView-->
        <!--android:id="@+id/timeActHeartSecond"-->
        <!--android:layout_width="9dp"-->
        <!--android:layout_height="11dp"-->
        <!--android:layout_below="@+id/timeActRunningSecond"-->
        <!--android:layout_marginStart="325dp"-->
        <!--android:layout_marginTop="46dp"-->
        <!--app:srcCompat="@drawable/heart" />-->


</RelativeLayout>